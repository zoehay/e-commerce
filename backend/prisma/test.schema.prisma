generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("TEST_DATABASE_URL")
}

model Product {
  id Int @id @default(autoincrement())
  name String
  description String
  price Decimal @db.Money
  cartProducts CartProduct[]
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String 
  name String?
  cartProducts CartProduct[]
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt   DateTime
}

model CartProduct {
  user   User @relation(fields: [userId], references: [id])
  userId Int 
  product Product @relation(fields: [productId], references: [id])
  productId Int
  quantity Int
  @@id ([userId, productId])
}